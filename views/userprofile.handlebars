<body class="bg-dark">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 mt-5 pt-5">
                <div class="row z-depth-3">
                    <div class="col-sm-4 bg-info rounded-left">
                        <div class="card-block text-center text-white">
                            <br>
                            <img src="{{profile.profile_img_url}}" class="card-img-top" alt="...">
                            <p>{{profile.bio}}</p>
                        </div>
                    </div>
                    <div class="col-sm-8 bg-white rounded-right">
                        <h3 class="mt-3 text-center">My Activities</h3>
                        <hr class="bg-primary">
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Recent:</p>
                                <h6 class="text-muted">{{profile.activities}}</h6>
                            </div>
                            
                        </div>
                        <hr class="bg-primary">
                        <br>
                        <h3 class="mt-3 text-center">My Information</h3>
                        <hr class="bg-primary">
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Name:</p>
                                <h6 class="text-muted"> {{firstname}} {{lastname}} </h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Age:</p>
                                <h6 class="text-muted">{{profile.age}}</h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Email:</p>
                                <h6 class="text-muted">{{email}}</h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Phone:</p>
                                <h6 class="text-muted">{{profile.phonenumber}}</h6>
                            </div>
                            <div class="col-sm-6">
                                <p class="font-weight-bold">Zip Code:</p>
                                <h6 class="text-muted">{{profile.location}}</h6>
                            </div>
                        </div>

                        <ul class="list-unstyled d-flex justify-content-center mt-4">
                            <li><a href="#"><i class="fab fa-instagram px-3 h4 text-info"></i>{{profile.instagram}}</a></li>
                            <li><a href="#"><i class="fab fa-snapchat px-3 h4 text-info"></i></a>{{profile.snapchat}}</li>
                        </ul>
                        <div class="d-flex justify-content-center">
                        <a href="/matches/{{profile.location}}">
                            <input type="submit" name="findmatch" value="Find a MuscleMate!" class="btn btn-primary btn-inline btn-lg mb-4"></input>
                        </a>
                        <a href="/userprofile/{{id}}">
                            <input type="submit" name="updateainfo" value="Update Info" class="btn btn-primary btn-inline btn-lg mb-4"></input>
                        </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<br>
<br>
<br>
</body>
<script src="/js/profile.js"></script>
