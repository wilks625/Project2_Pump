<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <div id="ui">
                    <h1 class="text-center">REGISTRATION FORM</h1>
                    <br>
                    <form class="form signup-form text-center">
​
                        <div class="row">
                            <div class="col-lg-6">
                                <label>First Name:</label>
                                <input type="text" name="fname" class="form-control" id="firstname-signup"
                                    placeholder="Enter your first name..">
                            </div>
                            <div class="col-lg-6">
                                <label>Last Name:</label>
                                <input type="text" name="lname" class="form-control" id="lastname-signup"
                                    placeholder="Enter your last name..">
                            </div>
                        </div>
                        <br>
                        <label>Username</label>
                        <input type="text" name="email" class="form-control" id="username-signup" placeholder="Enter your username..">
                        <br>
                        <label>Email</label>
                        <input type="text" name="email" class="form-control" id="email-signup" placeholder="Enter your email..">
​
                        <br>
                        <div class="row">
                            <div class="col-lg-12">
                                <label>Password:</label>
                                <input type="password" name="password" class="form-control" id="password-signup"
                                    placeholder="Enter a password..">
                            </div>
                            <br>
                            <br>
                        </div>
                        <br>
                        <br>
                        <input type="submit" name="submit" value="submit"
                            class="btn btn-primary btn-block btn-lg"></input>
                    </form>
                </div>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
